# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For local development: Leave DATABASE_URL empty to use SQLite
# For production (Supabase): Add your connection URLs below
# DATABASE_URL=postgresql://postgres.xxx:YOUR_PASSWORD@xxx.pooler.supabase.com:6543/postgres
# DIRECT_DATABASE_URL=postgresql://postgres.xxx:YOUR_PASSWORD@xxx.pooler.supabase.com:5432/postgres
DATABASE_URL=
DIRECT_DATABASE_URL=

# CORS Settings (add your frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://printbox3d.com

# Email Settings (Required for order notifications)
# Use info@printbox3d.com credentials here
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=info@printbox3d.com
EMAIL_HOST_PASSWORD=your-hostinger-password
DEFAULT_FROM_EMAIL=info@printbox3d.com

# Resend API (RECOMMENDED for cloud deployments - replaces SMTP when set)
# Free tier: 3,000 emails/month. Sign up at https://resend.com
# 1. Verify your domain printbox3d.com in the Resend dashboard
# 2. Create an API key and paste it below
# 3. When RESEND_API_KEY is set, SMTP settings above are ignored
RESEND_API_KEY=

# Razorpay Payment Gateway
# Get your keys from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
